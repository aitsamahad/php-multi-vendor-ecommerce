{% extends './templates/app.twig' %}

{% block content %}
<div id="container">
    <div class="container">
      <!-- Breadcrumb Start-->
      <ul class="breadcrumb">
        <li><a href="{{ path_for('main.page') }}"><i class="fa fa-home"></i></a></li>
        <li><a href="#">Account</a></li>
        <li><a href="#">Addresses</a></li>
      </ul>
      <!-- Breadcrumb End-->
      <div class="row">
          {% if flash.getMessage('Success') %}
            <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ flash.getMessage('Success') | first }}</div>
          {% endif %}
          
          {% if flash.getMessage('Danger') %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ flash.getMessage('Danger') | first }}</div>
          {% endif %}
        <!--Middle Part Start-->
        <div id="content" class="col-sm-9">
        
        <h1 class="title">Account Information</h1>
        
        <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td colspan="2" class="text-left">My Account Details</td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td style="width: 50%;" class="text-left">
            <b>Name:</b> {{ account.u_name }}<br>
            <b>Email:</b> {{ account.u_email }} <br>
            <b>Phone:</b> {{ account.user_phone }}
              
              </td>
            <td style="width: 50%;" class="text-left">              <b>Billing Address:</b><br> {{ account.user_address }}, <br>{{ account.user_city }}, {{ account.user_state }} {{ account.user_postcode }} <span style="color: blue;"> <a href="{{ path_for('account.addresses.edit') }}">Edit</a></span>
                                                       </td>
          </tr>
        </tbody>
      </table>
      
                  
            
              
            
               
        </div>
        <!--Middle Part End -->
        <!--Right Part Start -->
                <aside class="col-sm-3 hidden-xs" id="column-right">
          <h3 class="subtitle">Account</h3>
          <div class="list-group">
            <ul class="list-item">
              <li><a href="{{ path_for('account.addresses') }}">My Account</a></li>
              <li><a href="{{ path_for('account.addresses') }}">Address Books</a></li>
              <li><a href="{{ path_for('account.wishlist.page') }}">Wish List</a></li>
              <li><a href="{{ path_for('reviews.page') }}">Reviews & Pending Reviews</a></li>
              <li><a href="{{ path_for('order.page') }}">Order History</a></li>
              <li><a href="{{ path_for('change.password') }}">Change Password</a></li>
            </ul>
          </div>
        </aside>
        <!--Right Part End -->
      </div>
    </div>
  </div>

{% endblock %}