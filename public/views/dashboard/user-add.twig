{% extends './dashboard/templates/app.twig' %}

{% block content %}
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Add New User</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Add User</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      
          {% if flash.getMessage('Success') %}
            <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ flash.getMessage('Success') | first }}</div>
          {% endif %}
          
          {% if flash.getMessage('Danger') %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ flash.getMessage('Danger') | first }}</div>
          {% endif %}

      <!-- Default box -->
      <div class="card">
        <form action="{{ path_for('dashboard.users.add') }}" method="POST">
        <div class="card-header">
          <h3 class="card-title">Title</h3>
        </div>
        <div class="card-body">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" value="{{ old.u_name }}" placeholder="User Name" name="u_name" required>
            {% if errors.u_name %}
                        <span class='help-block' style="color:red"> {{errors.u_name | first}} </span>
            {% endif %}
          </div>
          <div class="form-group">
            <label for="name">Email</label>
            <input type="email" value="{{ old.u_email }}" class="form-control" id="name" placeholder="User Email" name="u_email" required>
            {% if errors.u_name %}
              <span class='help-block' style="color:red"> {{errors.u_name | first}} </span>
            {% endif %}
          </div>
          <div class="form-group">
            <label for="name">Password</label>
            <input type="password" class="form-control" id="name" placeholder="Password" name="u_password" required>
          </div>
          <div class="form-group">
            <label for="name">Phone</label>
            <input type="text" value="{{ old.user_phone }}" class="form-control" id="name" placeholder="Phone" name="user_phone" required>
            {% if errors.u_name %}
              <span class='help-block' style="color:red"> {{errors.u_name | first}} </span>
            {% endif %}
          </div>
          <div class="form-group">
            <label for="name">Address</label>
            <input type="text" value="{{ old.user_address }}" class="form-control" id="name" placeholder="Address" name="user_address" required>
            {% if errors.u_name %}
              <span class='help-block' style="color:red"> {{errors.u_name | first}} </span>
            {% endif %}
          </div>
          <div class="form-group">
            <label for="name">City</label>
            <input type="text" value="{{ old.user_city }}" class="form-control" id="name" placeholder="City" name="user_city" required>
            {% if errors.u_name %}
              <span class='help-block' style="color:red"> {{errors.u_name | first}} </span>
            {% endif %}
          </div>
          <div class="form-group">
            <label for="name">Post Code</label>
            <input type="text" value="{{ old.user_postcode }}" class="form-control" id="name" placeholder="Post Code" name="user_postcode" required>
            {% if errors.u_name %}
              <span class='help-block' style="color:red"> {{errors.u_name | first}} </span>
            {% endif %}
          </div>
          <div class="form-group">
            <label for="product_categories">State</label>
            <select class="form-control" id="input-zone" name="user_state" required>
                    <option value=""> --- Please Select --- </option>
                    <option value="Sindh">Sindh</option>
                    <option value="Punjab">Punjab</option>
                    <option value="KPK">KPK</option>
                    <option value="Balochistan">Balochistan</option>
                    <option value="AJK">AJK</option>
                    <option value="Federal State/Islamabad">Federal State/Islamabad</option>
            </select>
          </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
          <button type="submit" class="btn btn-primary" id="submitProduct" name="submit">Submit</button>
        </div>
        <!-- /.card-footer-->
      </form>
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <script>

function preview_image() 
{
 var total_file=document.getElementById("customFile").files.length;
 for(var i=0;i<total_file;i++)
 {
  $('#image_preview').empty();
  $('#image_preview').append("<br><img src='"+URL.createObjectURL(event.target.files[i])+"' width='100%'><br>");
 }
}
  </script>

{% endblock %}