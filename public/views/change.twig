{% extends './templates/app.twig' %}

{% block content %}
<div id="container">
    <div class="container">
      <!-- Breadcrumb Start-->
      <ul class="breadcrumb">
        <li><a href="{{ path_for('main.page') }}"><i class="fa fa-home"></i></a></li>
        <li><a href="#">Account</a></li>
        <li><a href="#">Change Password</a></li>
      </ul>
      <!-- Breadcrumb End-->
      <div class="row">
        <!--Middle Part Start-->
        <div id="content" class="col-sm-9">
          <h1 class="title">Change Password</h1>
          <div class="row">
            <div class="col-sm-9">
              <h2 class="subtitle">Want to change your password?</h2>
          {% if flash.getMessage('Success') %}
            <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ flash.getMessage('Success') | first }}</div>
          {% endif %}
          
          {% if flash.getMessage('Danger') %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ flash.getMessage('Danger') | first }}</div>
          {% endif %}
              <form action="{{ path_for('change.password') }}" method="POST">
                <div class="form-group">
                  <label class="control-label" for="input-old-password">Current Password</label>
                  <input type="text" name="password_old" value="" placeholder="Current Password" id="input-old-password" class="form-control">
                </div>
                <div class="form-group">
                  <label class="control-label" for="input-password">New Password</label>
                  <input type="text" name="password" value="" placeholder="New Password" id="input-password" class="form-control">
                </div>
                <input type="submit" value="Change Password" class="btn btn-primary">
              </form>
            </div>
          </div>
        </div>
        <!--Middle Part End -->
        <!--Right Part Start -->
        <aside class="col-sm-3 hidden-xs" id="column-right">
          <h3 class="subtitle">Account</h3>
          <div class="list-group">
            <ul class="list-item">
              <li><a href="{{ path_for('account.addresses') }}">My Account</a></li>
              <li><a href="{{ path_for('account.addresses') }}">Address Books</a></li>
              <li><a href="{{ path_for('account.wishlist.page') }}">Wish List</a></li>
              <li><a href="{{ path_for('reviews.page') }}">Reviews & Pending Reviews</a></li>
              <li><a href="{{ path_for('order.page') }}">Order History</a></li>
              <li><a href="{{ path_for('change.password') }}">Change Password</a></li>
            </ul>
          </div>
        </aside>
        <!--Right Part End -->
      </div>
    </div>
  </div>

{% endblock %}